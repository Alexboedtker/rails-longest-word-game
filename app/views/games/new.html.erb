<html>
  <head></head>
  <body>
    <h1>Guess the Longest Word possible!</h1>
    <% @letters.each do |letter| %>
      <p> <%= letter %> </p>
    <% end %>
    <form action="/score" method="post">
      <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
      <input type="text" name="word" placeholder="Type your word!">
      <input type="submit" value="Play">
      <input type="text" name="letters" value="<%= @letters.join %>" hidden>
    </form>
  </body>
</html>
