<html>
  <head></head>
  <body>
    <div class="container">
      <h1>Guess the Longest Word possible!</h1>
      <div class="flex">
        <% @letters.each do |letter| %>
          <p> <%= letter %> </p>
        <% end %>
      </div>
      <form action="/score" method="post">
        <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
        <input type="text" name="word" placeholder="Type your word!">
        <input type="submit" value="Play">
        <input type="text" name="letters" value="<%= @letters.join %>" hidden>
      </form>
    </div>
  </body>
</html>
